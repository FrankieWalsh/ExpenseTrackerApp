<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextExpenseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Description"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextExpenseAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/expense_categories"
        android:prompt="@string/select_category_prompt"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/textViewSelectMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Members to Split With"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/listViewMembers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:choiceMode="multipleChoice" />


</LinearLayout>
